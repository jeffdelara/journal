<div class="md:bg-white md:shadow rounded p-8 md:w-3/4 lg:w-2/5 mx-auto md:mt-6">
<h2 class="text-3xl text-center mb-3 font-bold">Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field mt-3">
    <%= f.label :email, class: "font-semibold text-gray-500" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "text-xl border border-gray-500 w-full rounded py-1 px-2" %>
  </div>

  <div class="field mt-3">
    <%= f.label :password, class: "font-semibold text-gray-500" %>
    <% if @minimum_password_length %>
    <em class="text-gray-400">(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "text-xl border border-gray-500 w-full rounded py-1 px-2" %>
  </div>

  <div class="field mt-3">
    <%= f.label :password_confirmation, class: "font-semibold text-gray-500" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "text-xl border border-gray-500 w-full rounded py-1 px-2" %>
  </div>

  <div class="actions mt-3">
    <%= f.submit "Sign up", class: "cursor-pointer w-full py-2 px-3 text-xl bg-indigo-500 hover:bg-indigo-600 border-2 border-indigo-500 hover:border-indigo-600 text-white inline-block font-semibold rounded-md shadow focus:outline-none" %>
  </div>
<% end %>

  <div class="text-indigo-500 font-semibold mt-3">
    <%= render "devise/shared/links" %>
  </div>
</div>
