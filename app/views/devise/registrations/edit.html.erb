<div class="md:bg-white md:shadow rounded p-8 md:w-3/4 lg:w-2/5 mx-auto md:mt-6">
<h2 class="text-3xl text-center mb-3 font-bold">Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field mt-3">
    <%= f.label :email, class: "font-semibold text-gray-500" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "text-xl border border-gray-500 w-full rounded py-1 px-2" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field mt-3">
    <%= f.label :password, class: "font-semibold text-gray-500" %> <i>(leave blank if you don't want to change it)</i>
    <%= f.password_field :password, autocomplete: "new-password", class: "text-xl border border-gray-500 w-full rounded py-1 px-2" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="field mt-3">
    <%= f.label :password_confirmation, class: "font-semibold text-gray-500" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "text-xl border border-gray-500 w-full rounded py-1 px-2" %>
  </div>

  <div class="field mt-3">
    <%= f.label :current_password, class: "font-semibold text-gray-500" %> <i>(we need your current password to confirm your changes)</i>
    <%= f.password_field :current_password, autocomplete: "current-password", class: "text-xl border border-gray-500 w-full rounded py-1 px-2" %>
  </div>

  <div class="actions mt-3">
    <%= f.submit "Update", class: "cursor-pointer w-full py-2 px-3 text-xl bg-indigo-500 hover:bg-indigo-600 border-2 border-indigo-500 hover:border-indigo-600 text-white inline-block font-semibold rounded-md shadow focus:outline-none" %>
  </div>
<% end %>

<h3 class="text-xl mt-3 text-center mb-3 font-bold">Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "mt-3 cursor-pointer w-full py-2 px-3 text-xl bg-gray-500 hover:border-gray-600 text-white inline-block font-semibold rounded-md shadow focus:outline-none" %></p>
<div class="text-indigo-500 font-semibold mt-3">
  <%= link_to "Back", :back %>
</div>
</div>
