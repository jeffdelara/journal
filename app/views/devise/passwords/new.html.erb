<div class="md:bg-white md:shadow rounded p-8 w-1/4 mx-auto md:mt-6">
<h2 class="text-3xl text-center mb-3 font-bold">Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email, class: "font-semibold text-gray-500" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "text-xl border border-gray-500 w-full rounded py-1 px-2" %>
  </div>

  <div class="actions mt-3">
    <%= f.submit "Send me reset password instructions", class: "cursor-pointer w-full py-2 px-3 bg-indigo-500 hover:bg-indigo-600 border-2 border-indigo-500 hover:border-indigo-600 text-white inline-block font-semibold rounded-md shadow focus:outline-none" %>
  </div>
<% end %>

  <div class="text-indigo-500 font-semibold mt-3">
    <%= render "devise/shared/links" %>
  </div>
</div>
