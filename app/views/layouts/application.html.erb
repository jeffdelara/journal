<!DOCTYPE html>
<html>
  <head>
    <title>Journal</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application' %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="bg-gray-100">
    <%= render 'layouts/header' %>

    <div class="px-6 py-2">
        <% if notice %><p class="notice bg-green-100 py-2 px-3 text-center rounded shadow text-green-800"><%= notice %></p><% end %>
        <% if alert %><p class="alert bg-pink-100 py-2 px-3 text-center rounded shadow text-pink-800"><%= alert %></p><% end %>
      <%= yield %>
    </div>
  </body>
</html>
