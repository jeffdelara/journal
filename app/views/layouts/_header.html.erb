<div class="bg-indigo-800 px-6 py-3 shadow flex gap-6 text-indigo-200">
  <h1 class="text-white text-3xl font-bold logo"><%= link_to "Journa.ly", tasks_path %> </h1>
  
  <div class="flex justify-center items-center text-lg gap-4 mr-auto">
    <% if user_signed_in? %>
      <%= link_to "Tasks", tasks_path, class: "hover:text-indigo-50" %>
      <%= link_to "Today", today_tasks_path, class: "hover:text-indigo-50" %>
    <% end %>
  </div>

  <div class="flex justify-center items-center text-lg gap-4">
    <% if user_signed_in? %>
      <%= link_to current_user.email, edit_user_registration_path, class: "hidden md:block" %>
      <%= link_to destroy_user_session_path, method: :delete do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
        </svg>
      <% end %>
    <% else %>
      <%= link_to "Sign up", new_user_registration_path %>
      <%= link_to "Login", new_user_session_path %>
    <% end %>
  </div>
</div>
